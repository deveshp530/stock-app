<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header results-block">
      <% @friends.each do |f| %>
      <strong>Name: </strong> <%= f.full_name %>
      <strong>Email: </strong> <%= f.email %>
      <strong>Profile: </strong> <%= link_to 'View Profile', '#', class: "btn btn-small btn-success" %>
      <%= link_to 'Follow friend?', '#', class: "btn btn-sm btn-success", method: :post %>
<%end %>
  </div>
<% end %>